<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head') %>
    <title>Task</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-4 d-flex justify-content-center">
        <table class="table table-bordered text-center w-75">
            <thead class="table-dark">
                <tr>
                <th>Task No</th>
                <th>Task Name</th>
                <th>Task Description</th>
                <th>Task Status</th>
                </tr>
            </thead>
            <tbody class="table-warning">
                <% task.forEach((t, i) => { %>  
                    <tr class="fw-bold">
                        <td  class="<%= t.status ? 'text-success' : 'text-danger' %>"><%- i + 1 %></td>
                        <td  class="<%= t.status ? 'text-success' : 'text-danger' %>"><%- t.taskName %></td>
                        <td  class="<%= t.status ? 'text-success' : 'text-danger' %>"><%- t.description %></td>
                        <td class="<%= t.status ? 'text-success' : 'text-danger' %>">
                            <% if (t.status) { %>
                                Task Completed
                            <% } else { %>
                                Not Completed
                            <% } %>
                        </td>
                    </tr>
                <% }); %>
            </tbody>                
        </table>
  </div>
  <div class="container mt-4 d-flex justify-content-center w-25">
    <a href="/api/alltasks" class="btn btn-outline-warning w-100" >Go back</a>
  </div>
    <%- include('./partials/script') %>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/nav') %>
        <div>
            <table widh="200" border="1">
                <thead>
                    <th>Task No</th>
                    <th>Task Name</th>
                    <th>Task Description</th>
                    <th>Task Status</th>
                </thead>
                <tbody>
                    <% locals.tasks.forEach(t, i => { %>
                     <tr>
                        <td><%- i+1 %></td>
                        <td><%-t.taskName %></td>
                        <td><%-t.description %></td>
                        <td><%-t.status %></td>
                     </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <%- include('./partials/script') %>
    
</body>
</html>